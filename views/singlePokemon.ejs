<!DOCTYPE html>
<html lang="nl-BE">
<head>
    <%-include('partials/head');%>
    <title>Pokemon | <%=data.name%></title>
</head>
<body>
    <main>
        <%-include('partials/navbar.ejs');-%>
        <div class="center pro50">
            <h1 class="txtcenter"><%=data.name.charAt(0).toUpperCase() + data.name.slice(1)%> <%if (database) {if (database.includes(data.id)){%><span class="captured">(Captured)</span><%}}%></h1>
            <img src="<%=data._sprites.front_default%>" alt="<%=data.name%> picture" class="singlePokemonSprite">
            <div class="pa2">
                <h2>Beschrijving</h2>
                <%if (database) {if (database.includes(data.id)){%>
                <p>Bijnaam: </p>
                <%}}%>
                <p>Stats: </p>
                <table>
                    <% for (let i = 0; i < data._stats.length; i++) { console.log(data._stats[i].stat) %>
                    <tr>
                        <td>•    </td>
                        <td><%=data._stats[i].stat.name.charAt(0).toUpperCase() + data._stats[i].stat.name.slice(1) %>: </td>
                        <td><%=data._stats[i].base_stat%></td>
                    </tr>
                <%}%>
            </table>
            </div>
            <div class="centerPage">
                <%if (database){%>
                    <!-- onclick="await releasePokemon(<%-data.id%>); window.location.href" -->
                <button class="btn btn-danger mao1">Laat Pokémon vrij</button>
                <%}%>
                <button class="btn btn-danger mao1" onclick='window.location.href="/pokemon"'>Terug naar Pokédex</button>
            </div>
        </div>
    </main>
    
</body>
</html>